{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "es2017",
      "dom"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@layouts/*": ["src/layouts/*"],
      "@layouts": ["src/layouts"],
      "@theme/*": ["src/theme/*"],
      "@theme": ["src/theme"],
      "@ui/*": ["src/ui/*"],
      "@ui": ["src/ui"],
    },
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
